
@page "/"
@using MudBlazor
@using RohanSpeechApp.RazorClassLibrary.Stages

@inject ISnackbar Snackbar

<PageTitle>Index</PageTitle>


<MudTabs Class="mud-width-full" Rounded="true" Centered="true" PanalClass="ma-6" >

    <MudTabPanel Text="Level one" ToolTip="Stage one">
        <StageOne></StageOne>
    </MudTabPanel>

    <MudTabPanel Text="Stage two" ToolTip="Stage two. Increase your level to unlock" Disabled="true" @onclick=@DisplayDisabledError
                 Icon=@Icons.Material.Filled.Lock>
    </MudTabPanel>

    <MudTabPanel Text="Stage three" ToolTip="Stage three. Increase your level to unlock" Disabled="true" Icon=@Icons.Material.Filled.Lock>
    </MudTabPanel>

</MudTabs>


@code{


    private void DisplayDisabledError()
    {
        Snackbar.Add("Hi", Severity.Warning);
        Console.WriteLine("Hi");
    }

    
}
