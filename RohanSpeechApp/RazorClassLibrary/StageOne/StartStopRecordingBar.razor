@using MudBlazor;


@if (started)
{

    <MudIconButton Class="mud-width-full rounded" Style="height:300px;width:500px;margin-top: 350px;" Color="Color.Error" Variant="Variant.Filled"
                    Icon="@Icons.Material.Filled.Stop" Size="Size.Large" OnClick=@StartStopBtnClicked>

    </MudIconButton>

} else
{

    <MudIconButton Class="mud-width-full rounded" Style="height:300px;width:500px;margin-top: 350px;" Color="Color.Success" Variant="Variant.Filled"
               Icon="@Icons.Material.Filled.PlayArrow" Size="Size.Large" OnClick=@StartStopBtnClicked
              
                >

    </MudIconButton>

}


@code {
    private bool started = false;


    [Parameter]
    public EventCallback<bool> RecordingStartedStopped { get; set; }

    private async void StartStopBtnClicked()
    {
        started = !started;

        await RecordingStartedStopped.InvokeAsync(started);

        StateHasChanged();
    }


}
