@using MudBlazor;


@if (started)
{

    <MudButton Class="mud-width-full rounded" Style="height:450px;width:450px;margin-top: 450px;" Color="Color.Error" Variant="Variant.Filled"
                    StartIcon="@Icons.Material.Filled.Stop" IconSize="Size.Large" OnClick=@StartStopBtnClicked>
                Stop recording
    </MudButton>

} else
{

    <MudButton Class="mud-width-full rounded" Style="height:450px;width:450px;margin-top: 450px;" Color="Color.Success" Variant="Variant.Filled"
           StartIcon="@Icons.Material.Filled.PlayArrow" IconSize="Size.Large" OnClick=@StartStopBtnClicked>
                Start recording
    </MudButton>

}


@code {
    private bool started = false;


    [Parameter]
    public EventCallback<bool> RecordingStartedStopped { get; set; }

    private async void StartStopBtnClicked()
    {
        started = !started;

        await RecordingStartedStopped.InvokeAsync(started);

        StateHasChanged();
    }


}
