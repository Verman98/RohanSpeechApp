@using MudBlazor

<MudAppBar Elevation="4" Fixed="true" Style="height:75px;">

    <MudAvatar Class="mt-3" Image="images/rohanAvatar.jpg" Size="Size.Large"></MudAvatar>

    <div class="mt-3 mx-5 flex-column">
        <p style="color:gold; font-size:18px;">Level: @Level</p>

        <MudProgressLinear Color="Color.Secondary" Value="@XP" Rounded="true" Size="Size.Medium"
        Style="width:150px;">
        </MudProgressLinear>

    </div>
    

</MudAppBar>

@code {
    private int Level = 1;
    private int XP = 50;

}
